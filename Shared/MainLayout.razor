        <NavMenu />
    </div>

    <div @onclick="@(async () => await ToggleDarkMode())" style="color:var(--primary);width: 30px;height: 30px;filter: drop-shadow(2px 4px 6px black);background-color: var(--logo-background);border-radius: 50%;margin: 10px;padding: 6px;display: inline-flex;justify-content: center;align-content: center;align-items: center; position:absolute; top:0.5rem; right:0.5rem;">
        <span class="oi oi-moon" aria-hidden="true"></span>
